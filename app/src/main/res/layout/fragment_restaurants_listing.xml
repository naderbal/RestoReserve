<?xml version="1.0" encoding="utf-8"?>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/vSwipe"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".sections.customer.home.HomeActivity">

    <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_search_black_24dp"
            android:layout_marginStart="@dimen/content_margin_normal"
            android:layout_marginEnd="@dimen/content_margin_normal"
            android:inputType="text"
            android:maxLines="1"
            android:lines="1"
            android:hint="Search restaurant"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/content_margin_normal"
            android:text="Events and Offers"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvEvents"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/content_margin_normal"
            android:layout_height="120dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/content_margin_normal"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/content_margin_large"
            android:text="Restaurants"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/content_margin_normal"/>
    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>